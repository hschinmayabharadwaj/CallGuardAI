# Environment Variables Template

# Copy this file to .env.local for local development
# For Vercel, set these in the Vercel dashboard

# ===== Frontend Environment Variables =====

# API Base URL
# Local: http://localhost:8000
# Production: Your deployed backend URL
VITE_API_URL=http://localhost:8000

# App Environment
VITE_APP_ENV=development

# Enable/Disable Features
VITE_ENABLE_AUTH=true
VITE_ENABLE_ANALYTICS=true

# ===== Backend Environment Variables (for reference) =====

# Database
DATABASE_URL=sqlite:///./callguard.db

# JWT Secret (generate a secure random string)
JWT_SECRET=your-secret-key-here-change-this

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Log Level
LOG_LEVEL=INFO

# File Upload Settings
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=.wav,.mp3,.ogg,.flac,.m4a,.mp4,.webm,.mkv

# ML Model Settings
WHISPER_MODEL=base
ENABLE_GPU=false

# ===== Deployment URLs =====

# Replace with your actual deployment URLs

# Vercel Frontend URL
# Example: https://callguard-ai.vercel.app
FRONTEND_URL=http://localhost:3000

# Backend URL (Railway, Render, etc.)
# Example: https://callguard-api.railway.app
BACKEND_URL=http://localhost:8000
